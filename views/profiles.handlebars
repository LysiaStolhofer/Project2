
{{!-- Jumbotron with image and title? --}}
<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Primp & Play</h2>

        {{!--Profile pictures with 2 buttons--}}
        <article class="blog_card">
                  <div class="blog_card_top">

                    {{!--when clicking on profile pic - clients goes to singleprofile.handlebars--}}
                    <a
                      onclick="window.open('/singleprofile.handlebars')"
                      title="Click for Profile-Informations"
                    >
                      <div class="project_box_one">
                        <img
                          class="pic2"
                          src= {{}}
                          alt="pro1"
                        />
                        <div class="product_info">
                          <div class="product_info_text">
                            <div class="product_info_text_inner">
                              <i class="ion ion-plus"></i>
                              <h4>Click for Profile-Informations</h4>
                            </div>
                          </div>
                        </div>
                      </div>
                    </a>

                  {{!--Button to go to newform.handlebars--}}
                  <button id="link" onclick="window.open('/newform.handlebars')">
                  Sign {{pet_name}} up for today!
                  </button>

                  {{!--Button to go to bill.handlebars--}}
                  <button id="link" onclick="window.open('/bill.handlebars')">
                  Sign {{pet_name}} out for today!
                  </button>

                  {{!--Insert Client name and pet name into the flag on corner of the profile pic--}}
                    <div class="blog_date">
                      {{pet_name}}
                      <span>
                        {{client_first}} {{client_last}}
                      </span>
                    </div>
                  </div>
                </article>
















        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Example Text</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-description">Example Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Example Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>


